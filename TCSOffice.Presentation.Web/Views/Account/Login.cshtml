@model TCSOffice.Business.Domain.Dto.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row-fluid">
    <div class="span12">
        <div class="login-container">
            <div class="row-fluid">
                <div class="center">
                    <h1>
                        <i class="icon-leaf green"></i>
                        <span class="red">T. Choithram & Sons</span>
                        @*<span class="white">LLP</span>*@
                    </h1>
                    <h4 class="blue">&copy; TCS Office</h4>
                </div>
            </div>
            <div class="space-6"></div>
            <div class="row-fluid">
                <div class="position-relative">
                    <div id="login-box" class="login-box visible widget-box no-border">
                        <div class="widget-body">
                            @if (TempData["Error"] != null)
                            {
                            <div class="alert alert-danger">
                                @TempData["Error"]
                            </div>
                            }
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["Success"]
                                </div>
                            }
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="widget-main">
                                    <h4 class="header blue lighter bigger">
                                        <i class="icon-coffee green"></i>
                                        Please Enter Your Information
                                    </h4>
                                    <div class="space-6"></div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red" })
                                    <form>
                                        <fieldset>
                                            <label>
                                                <span class="block input-icon input-icon-right">
                                                    @Html.TextBoxFor(m => m.UserName, new { @class = "span12", placeholder = "User Name" })
                                                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger", @style = "color:red" })
                                                    <i class="icon-user"></i>
                                                </span>
                                            </label>
                                            <label>
                                                <span class="block input-icon input-icon-right">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "span12", @placeholder = "Password" })
                                                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger", @style = "color:red" })
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>
                                            <div class="space"></div>
                                            <div class="clearfix">
                                                <button type="submit" class="width-35 pull-right btn btn-small btn-primary">
                                                    <i class="icon-key"></i>
                                                    Login
                                                </button>
                                            </div>
                                            <div class="space-4"></div>
                                        </fieldset>
                                    </form>
                                </div><!--/widget-main-->
                            }
                            <div class="toolbar clearfix">
                                <div>
                                    <a href="#" onclick="show_box('forgot-box'); return false;" class="forgot-password-link">
                                        <i class="icon-arrow-left"></i>
                                        I forgot my password
                                    </a>
                                </div>
                                <div>
                                    <a href="#" onclick="show_box('signup-box'); return false;" class="user-signup-link">
                                        I want to register
                                        <i class="icon-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div><!--/widget-body-->
                    </div><!--/login-box-->
                    <div id="forgot-box" class="forgot-box widget-box no-border">
                        <div class="widget-body">
                            <div class="widget-main">
                                <h4 class="header red lighter bigger">
                                    <i class="icon-key"></i>
                                    Retrieve Password
                                </h4>
                                <div class="space-6"></div>
                                <p>
                                    Enter your email and to receive instructions
                                </p>
                                <label>
                                    <span class="block input-icon input-icon-right">
                                        <input type="email" class="span12" placeholder="Email" />
                                        <i class="icon-envelope"></i>
                                    </span>
                                </label>
                                <div class="clearfix">
                                    <button onclick="return false;" class="width-35 pull-right btn btn-small btn-danger">
                                        <i class="icon-lightbulb"></i>
                                        Send Me!
                                    </button>
                                </div>
                            </div><!--/widget-main-->
                            <div class="toolbar center">
                                <a href="#" onclick="show_box('login-box'); return false;" class="back-to-login-link">
                                    Back to login
                                    <i class="icon-arrow-right"></i>
                                </a>
                            </div>
                        </div><!--/widget-body-->
                    </div><!--/forgot-box-->
                    @using (Html.BeginForm("RegisterCompany", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div id="signup-box" class="signup-box widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header green lighter bigger">
                                        <i class="icon-group blue"></i>
                                        Company Registration
                                    </h4>
                                    <div class="space-6"></div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red" })
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "span12", placeholder = "Email" })
                                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger", @style = "color:red" })
                                            <i class="icon-envelope"></i>
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "span12", placeholder = "UserName", id = "userNameRegisterId" })
                                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger", @style = "color:red" })
                                            <i class="icon-user"></i>
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(m => m.Password, new { @class = "span12", @placeholder = "Password", id = "passwordRegisterId" })
                                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger", @style = "color:red" })
                                            <i class="icon-lock"></i>
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span12", @placeholder = "Confirm Password" })
                                            @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger", @style = "color:red" })
                                            <i class="icon-retweet"></i>
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "span12", @placeholder = "Company Name" })
                                            @Html.ValidationMessageFor(x => x.CompanyName, "", new { @class = "text-danger", @style = "color:red" })
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextAreaFor(m => m.Address, new { @class = "span12", @placeholder = "Address" })
                                            @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger", @style = "color:red" })
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(m => m.Phone, new { @class = "span12", @placeholder = "Phone" })
                                            @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger", @style = "color:red" })
                                        </span>
                                    </label>
                                    <div class="space-24"></div>
                                    <div class="clearfix">
                                        <button type="reset" class="width-30 pull-left btn btn-small">
                                            <i class="icon-refresh"></i>
                                            Reset
                                        </button>
                                        <button type="submit" class="width-65 pull-right btn btn-small btn-success">
                                            Register
                                            <i class="icon-arrow-right icon-on-right"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="toolbar center">
                                    <a href="#" onclick="show_box('login-box'); return false;" class="back-to-login-link">
                                        <i class="icon-arrow-left"></i>
                                        Back to login
                                    </a>
                                </div>
                            </div><!--/widget-body-->
                        </div><!--/signup-box-->
                    }
                </div><!--/position-relative-->
            </div>
        </div>
    </div><!--/.span-->
</div><!--/.row-fluid-->
