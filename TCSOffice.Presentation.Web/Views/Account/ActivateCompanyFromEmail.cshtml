@model TCSOffice.Business.Domain.Dto.LoginViewModel

@{
    ViewBag.Title = "ActivateCompany";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row-fluid">
    <div class="span12">
        <div class="login-container">
            <div class="row-fluid">
                <div class="center">
                    <h1>
                        <i class="icon-leaf green"></i>
                        <span class="red">T. Choithram & Sons</span>
                        @*<span class="white">LLP</span>*@
                    </h1>
                    <h4 class="blue">&copy; TCS Office</h4>
                </div>
            </div>
            <div class="space-6"></div>
            <div class="row-fluid">
                <div class="position-relative">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }
                    @using (Html.BeginForm("ActivateCompanyFromEmail", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        if (TempData["CompanyId"] != null)
                        {
                            TempData.Keep("CompanyId");
                        }
                        if (TempData["UserId"] != null)
                        {
                            TempData.Keep("UserId");
                        }
                        <div id="" class="">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header green lighter bigger">
                                        <i class="icon-group blue"></i>
                                        Company Details
                                    </h4>
                                    <div class="space-6"></div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red" })
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.DisplayNameFor(model => model.Email)
                                            <span> : </span>
                                            @Html.DisplayFor(m => m.Email, new { @class = "span12" })
                                            <i class="icon-envelope"></i>
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.DisplayNameFor(model => model.UserName)
                                            <span> : </span>
                                            @Html.DisplayFor(m => m.UserName, new { @class = "span12"})
                                            <i class="icon-user"></i>
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.DisplayNameFor(model => model.CompanyName)
                                            <span> : </span>
                                            @Html.DisplayFor(m => m.CompanyName, new { @class = "span12" })
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.DisplayNameFor(model => model.Address)
                                            <span> : </span>
                                            @Html.DisplayFor(m => m.Address, new { @class = "span12" })
                                        </span>
                                    </label>
                                    <label>
                                        <span class="block input-icon input-icon-right">
                                            @Html.DisplayNameFor(model => model.Phone)
                                            <span> : </span>
                                            @Html.DisplayFor(m => m.Phone, new { @class = "span12" })
                                        </span>
                                    </label>
                                    <div class="space-24"></div>
                                    <div class="clearfix">
                                        <button type="submit" class="width-65 btn btn-small btn-success">
                                            Activate
                                            <i class="icon-arrow-right icon-on-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div><!--/widget-body-->
                        </div><!--/signup-box-->
                    }
                </div><!--/position-relative-->
            </div>
        </div>
    </div><!--/.span-->
</div><!--/.row-fluid-->
