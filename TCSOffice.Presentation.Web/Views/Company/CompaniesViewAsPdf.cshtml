@model List<TCSOffice.Business.Domain.Dto.CompanyDto>

@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <title>Companies</title>
    <link rel="stylesheet" href="style.css">
    <link rel="license" href="https://www.opensource.org/licenses/mit-license/">
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Assets/css/font-awesome.min.css" />

    <link href="~/Assets/css/ace-fonts.css" rel="stylesheet" />
    <link href="~/Assets/css/ace.min.css" rel="stylesheet" />
    <link href="~/Assets/css/ace-responsive.min.css" rel="stylesheet" />
    <link href="~/Assets/css/ace-skins.min.css" rel="stylesheet" />

    <script src="~/Assets/js/ace-extra.min.js"></script>
    <script type="text/javascript">
        window.jQuery || document.write("<script src='../assets/js/jquery-2.0.3.min.js'>" + "<" + "/script>");
    </script>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Assets/js/jquery.dataTables.min.js"></script>

    <script src="~/Assets/js/jquery.dataTables.bootstrap.js"></script>

    <script src="~/Assets/js/ace-elements.min.js"></script>

</head>
<body>
    <header>
        <h1>Company Report</h1>
    </header>
    <div class="row-fluid">
        <div class="span12">
            <div><h2 class="pull-right">Printed On: @DateTime.UtcNow.ToShortDateString()</h2></div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Is Active</th>
                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Label(item.CompanyName)
                            </td>
                            <td>
                                @Html.Label(item.Email)
                            </td>
                            <td>
                                @Html.Label(item.Address)
                            </td>
                            <td>
                                @Html.Label(item.Phone)
                            </td>
                            <td>
                                @Html.Label(item.IsActive.ToString())
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

